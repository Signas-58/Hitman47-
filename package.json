{
  "name": "whatsapp-gpt",
  "version": "0.1.0",
  "description": "A WhatsApp bot written in TypeScript using Baileys and implement ChatGPT",
  "author": "Akmal Dira",
  "main": "dist/bot.js",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write --config .prettierrc.json \"src/**/*.ts\"",
    "lint": "eslint --ext .js --ignore-path .gitignore .",
    "dev": "ts-node src/bot.ts",
    "start": "node --max-old-space-size=4096 dist/bot.js",
    "build": "yarn rimraf dist/ && yarn tsc -p .",
    "pm2:start": " pm2 start ./pm2.config.js",
    "pm2:stop": "pm2 delete bot_akmal",
    "ci": "yarn install --frozen-lockfile"
  },
  "dependencies": {
    "@adiwajshing/baileys": "^4.4.0",
    "@adiwajshing/keyed-db": "^0.2.4",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/speech": "^5.4.0",
    "@google-cloud/text-to-speech": "^4.2.1",
    "@hapi/boom": "^10.0.0",
    "@typegoose/typegoose": "^10.0.0",
    "axios": "^0.27.2",
    "chalk": "4.1.1",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.0.3",
    "emoji-regex": "^10.2.1",
    "express": "^4.18.2",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "fs-extra": "^11.1.0",
    "link-preview-js": "^3.0.4",
    "linkifyjs": "^4.0.2",
    "mongoose": "^6.7.0",
    "openai": "^3.2.1",
    "pino": "^8.7.0",
    "pm2": "^5.3.0",
    "prettier": "^2.8.1",
    "qr-image": "^3.2.0",
    "qrcode-terminal": "^0.12.0",
    "telegraph-uploader": "^2.0.0",
    "typed-emitter": "^2.1.0",
    "uuid": "^9.0.0",
    "wa-sticker-formatter": "^4.3.2"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/express": "^4.17.15",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.15.3",
    "@types/prettier": "^2.7.1",
    "@types/qr-image": "^3.2.5",
    "@types/uuid": "^9.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
